print("Beginner Friendly List Operations Program")

# 1. Create a list
fruits = ["apple", "banana", "cherry"]
print("\nInitial list:", fruits)

# 2. Access elements
print("First element:", fruits[0])
print("Last element:", fruits[-1])

# 3. Add elements
fruits.append("orange")
print("After append:", fruits)

fruits.insert(1, "mango")
print("After insert at position 1:", fruits)

# 4. Remove elements
fruits.remove("banana")
print("After removing 'banana':", fruits)

fruits.pop(2)
print("After pop at index 2:", fruits)

# 5. Modify elements
fruits[0] = "grape"
print("After modifying first element:", fruits)

# 6. Loop through list
print("Looping through list:")
for fruit in fruits:
    print(fruit)

# 7. Length of list
print("Length of list:", len(fruits))

# 8. Check if item exists
if "mango" in fruits:
    print("Mango is in the list")
else:
    print("Mango is not in the list")
